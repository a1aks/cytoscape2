<document componentFinder="A_COUPLE_OF_CLASS_AND_LABEL_IS_EQUAL" 
    windowFinder="CLASS_IS_EQUAL_STRICTLY"  windowClass="cytoscape.view.CytoscapeDesktop">
    
    <scenario name="OPEN_NETWORK_FILE">
        <Click componentClass="JMenu" label="File"/>
        <Click componentClass="JMenuItem" label="Import"/>
        <Click componentClass="JMenuItem" label="Network..."/>
        <retriever retryTime="2000">
            <Click componentClass="JButton" dialogTitle="Import a Network" label="Select" windowFinder="CLASS_IS_ACCESSIBLE" 
                windowClass="cytoscape.dialogs.ImportNetworkDialog"/>
        </retriever>
        <retriever retryTime="2000">
            <!-- $(OPEN_FILE) is substituted by the JUnit program. -->
                 <FileChooser dialogTitle="Import Network File" 
                    directory="testData" fileName="$(FILE_TO_OPEN)"/>
        </retriever>
        <retriever retryTime="2000">
            <Click componentClass="JButton" dialogTitle="Import a Network" label="Import" windowFinder="CLASS_IS_ACCESSIBLE" 
                windowClass="cytoscape.dialogs.ImportNetworkDialog"/>
        </retriever>
       
        <Delay ms="3000"/>
        <retriever retryTime="10000" intervalTime="1000">
            <if verifier="Verify" property="enabled" expected="true" 
                componentClass="JButton" label="    Close    " 
                windowFinder="CLASS_IS_ACCESSIBLE" windowClass="cytoscape.task.ui.JTask">
                <Click label="    Close    " componentClass="JButton" 
                    windowFinder="CLASS_IS_ACCESSIBLE" 
                    windowClass="cytoscape.task.ui.JTask"/>
            </if>
        </retriever>
        
